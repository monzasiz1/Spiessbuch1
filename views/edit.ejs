<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Strafe bearbeiten</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <img src="/logo.png" class="logo" alt="Logo">
    <h1>Strafe bearbeiten</h1>
  </header>

  <div class="container">
    <form action="/admin/edit/<%= strafe.id %>" method="POST">
      <label>Mitglied</label>
      <select name="user_id">
        <% mitglieder.forEach(m => { %>
          <option value="<%= m.id %>" <%= strafe.user_id === m.id ? 'selected' : '' %>><%= m.username %></option>
        <% }) %>
      </select>

      <label>Datum</label>
      <input name="datum" type="date" value="<%= strafe.datum %>" required>

      <label>Veranstaltung</label>
      <input name="veranstaltung" value="<%= strafe.veranstaltung %>" required>

      <label>Grund</label>
      <input name="grund" value="<%= strafe.grund %>" required>

      <label>Kosten</label>
      <input name="punkte" type="number" step="0.01" value="<%= strafe.punkte %>" required>

      <button class="btn">ğŸ’¾ Speichern</button>
      <a href="/admin" class="btn btn-secondary">ZurÃ¼ck</a>
    </form>
  </div>
</body>
</html>
